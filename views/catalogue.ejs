<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Venta Directa</title>
    <link rel="stylesheet" href="/catalogue.css">
</head>
<body>
    <main class="main-wrapper">
         <div class="topheader">
            <a href="/">
                <img src="/assets/imgs/pata.png" alt="a silhouette of a dog paw">
            </a>
             <h1 class="catalogue-topheader">Nuestros productos</h1>
             
         </div>
        <% if (locals.prods) { %>
            
                <h2 class="catalogue-underheader">Alimentos</h2>
                <div class="list alimentos">
                    <ul>
                        <% prods.forEach(function(item){ %>
                            <div class="item-body">
                                <li class="item"><%= item.name %>
                                    <% if(item['imgsrc']){ %>
                                        <img src="<%=item['imgsrc']%>" alt="bolsa de alimento" class="list-image">
                                    <%  } %>
                                    <button>
                                        <a href="/comprar">Comprar</a>
                                    </button>
                                </li>
                                <div class="list-description">
                                    <ul>
                                        <li>Peso neto: <%= item['weight_in_kg'] %>kg</li>
                                        <li>Proteinas: <%= item['proteina']%>%</li>
                                    </ul>
                                </div>
                            </div>
                        <% }) %>
                    </ul>
                </div>
     <% } %>
    </main>
</body>
</html>